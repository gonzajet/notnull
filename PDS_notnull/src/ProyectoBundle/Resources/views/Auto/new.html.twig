{% extends "::base.html.twig" %}
{% block body %}
    <h1></h1>
    <br><br>
    <div class="container">
        <div class="row centered-form">
            {#        <div class="well well-sm">#}
            <h3 style="color: #ffffff"> Registre su vehiculo</h3>
            <div class="login-or">
                <hr class="hr-or">

            </div>
            {{form_start(form)}}
            <div class="form-group row">
                <div class="col-xs-3" style="color: #ffffff">
                    {{form_label(form.marca)}}
                    {{form_widget(form.marca, {'attr' : {'class': 'form-control', 'placeholder' : 'Ford'}})}}
                    <span class="text-danger"> {{ form_errors(form.marca)}} </span>
                </div>
                <div class="col-xs-3" style="color: #ffffff">
                    {{form_label(form.modelo)}}
                    {{form_widget(form.modelo, {'attr' : {'class': 'form-control', 'placeholder' : 'Fiesta'}})}}
                    <span class="text-danger"> {{ form_errors(form.modelo)}} </span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-3" style="color: #ffffff">
                    {{form_label(form.patente)}}
                    {{form_widget(form.patente, {'attr' : {'class': 'form-control', 'placeholder' : 'ABC-123 o AB-123-CD'}})}}
                    <span class="text-danger"> {{ form_errors(form.patente)}} </span>
                </div>
            </div>
            <button type="submit" value="Create" class="btn btn-primary">Registrarse</button>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}
