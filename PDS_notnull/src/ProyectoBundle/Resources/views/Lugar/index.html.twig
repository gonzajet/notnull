<div class="container top-buffer">
<ol class="breadcrumb">
    <li><a href="#"><h3>Lugares</h3></a></li>
</ol>
</div>
<div class="container top-buffer">
    <div class="row">
         <div class="col-md-12">
              <div class="col-md-3">
                <input id="codigo" name='codigo' type="text" placeholder="codigo" class="form-control">
              </div>
             <div class="col-md-1" style="margin-left: 20px">
                <div class="checkbox">
                    <label><input type="checkbox" value=""><strong>ocupado</strong></label>
                </div>
            </div>     
           <div class="col-md-2">
                <button type="button" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i></button>
                <a href="{{ path('lugar_new', { 'establecimiento': establecimiento}) }}" class="btn btn-primary" role="button">new</a>
            </div> 
         </div>
        </div> 
                       	
        <br/>
         
        {% if((lugares|length)>0) %}
            <table class="table table-hover">
                <tr>
                <th>Codigo</th>
                <th>disponible</th>
                <th></th>
                </tr>
                {% for item in lugares %}
                    <tr>
                        <td>{{ item.Codigo }}</td>
                        {% if item.estado == false  %}
                            <td><i class="fa fa-check" aria-hidden="true" style="color:green"></i></td>
                        {% else %}
                            <td> <i class="fa fa-times" aria-hidden="true" style="color:red"></i> </td>
                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <table class="table table-hover">
                <tr>
                <th>Codigo</th>
                <th>disponible</th>
                <th></th>
                </tr>
                <tr>
                    No encontramos lugares
                </tr>
            </table>
        {% endif %}
        
        
</div>    

