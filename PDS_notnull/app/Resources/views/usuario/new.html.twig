{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
        <div class="row centered-form">
        <div class="well well-sm">
    {{form_start(form)}}
      <div class="form-group row">
          <div class="col-xs-3">
              {{form_label(form.usuario)}}
              {{form_widget(form.usuario, {'attr' : {'class': 'form-control', 'placeholder' : 'OscarBracho'}})}}
              <span class="text-danger"> {{ form_errors(form.usuario)}} </span>
          </div>  
          <div class="col-xs-4">
              {{form_label(form.email)}}
              {{form_widget(form.email, {'attr' : {'class': 'form-control', 'placeholder' : 'OscarBracho@unaj.com'}})}}
              <span class="text-danger"> {{ form_errors(form.email)}} </span>
          </div>  
      </div>
          <div class="form-group row">
           <div class="col-xs-3">
              {{form_label(form.plainPassword.first)}}
              {{form_widget(form.plainPassword.first, {'attr' : {'class': 'form-control', 'placeholder' : ''}})}}
              <span class="text-danger"> {{ form_errors(form.plainPassword.first)}} </span>
          </div>
            <div class="col-xs-3">
              {{form_label(form.plainPassword.second)}}
              {{form_widget(form.plainPassword.second, {'attr' : {'class': 'form-control', 'placeholder' : ''}})}}
              <span class="text-danger"> {{ form_errors(form.plainPassword.second)}} </span>
          </div>
          </div>
       <div class="form-group row">
          <div class="col-xs-3">
              {{form_label(form.nombre  )}}
              {{form_widget(form.nombre, {'attr' : {'class': 'form-control', 'placeholder' : 'Oscar'}})}}
              <span class="text-danger"> {{ form_errors(form.nombre)}} </span>
          </div>  
          <div class="col-xs-3">
              {{form_label(form.apellido)}}
              {{form_widget(form.apellido, {'attr' : {'class': 'form-control', 'placeholder' : 'Bracho'}})}}
              <span class="text-danger"> {{ form_errors(form.apellido)}} </span>
          </div>  
    </div>
    <div class="form-group row">
          <div class="col-xs-6">
              {{form_label(form.telefono)}}
              {{form_widget(form.telefono, {'attr' : {'class': 'form-control', 'placeholder' : '11-1234-1234'}})}}
              <span class="text-danger"> {{ form_errors(form.telefono)}} </span>
          </div>  
    </div>
  <div class="checkbox">
    <label>
      <input type="checkbox"> Acepto terminos y condiciones
    </label>
  </div>
  <button type="submit" value="Create" class="btn btn-default">Registrarse</button>
{{form_end(form)}}
</div>
</div>
</div>
{% endblock %}
