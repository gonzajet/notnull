<script>
    function borrarReserva($idReserva) {
        if (confirm("Esta seguro?"+ $idReserva )){
            $.ajax({
                url: "{{ path('borrar_reserva') }}",
                type: "POST",
                dataType: "json",
                data: {
                    "id": $idReserva
                }
            }).done(function () {
                alert("Reserva eliminada");
                location.reload(true);
            });}
        else{alert("Operaci√≥n cancelada")}
    }

</script>

